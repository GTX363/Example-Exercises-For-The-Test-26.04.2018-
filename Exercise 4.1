double Sum(int arr[],int n)
{
    double sum = 0;
    for(int i = 0 ; i < n ; i++) sum += arr[i];
    return sum;
}

double Even(int arr[],int n)
{
    double sum = 0;
    for(int i = 0 ; i < n ; i++) if(arr[i] % 2 == 0) sum += arr[i];
    return sum;
}

double DivideBy3and5(int arr[],int n)
{
    double sum = 0;
    for(int i = 0 ; i < n ; i++) if(arr[i] % 3 == 0 && arr[i] % 5 == 0) sum += arr[i];
    return sum;
}

double OddIndex(int arr[],int n)
{
    double sum = 0;
    for(int i = 0 ; i < n ; i++) if(i % 2 == 1) sum += arr[i];
    return sum;
}

double Average(int arr[],int n)
{
    double sum = 0;
    for(int i = 0 ; i < n ; i++) sum += arr[i];
    return sum/n;
}

int FindMInTheArray(int arr[],int n, int m)
{
    int CountForM = 0;
for(int i = 0 ; i < n ; i++)
{
  if(arr[i] == m) CountForM++;
}
return CountForM;
}

